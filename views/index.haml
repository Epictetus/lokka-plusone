%h2= t.plusone
%form{:action => '/admin/plugins/plusone', :method => 'post'}
  %input{:type => 'hidden', :name => '_method', :value => 'put'}
  .field
    %label{:for => 'plusone_size'}= t.plusone_size
    %br
    %select{:id => 'plusone_size', :name => 'plusone_size'}
      %option{:value => 'small', :selected => Option.plusone_size == 'small'}= t.plusone_size_small
      %option{:value => 'medium', :selected => Option.plusone_size == 'medium'}= t.plusone_size_medium
      %option{:value => 'standard', :selected => Option.plusone_size == 'standard' || Option.plusone_size.blank? }= t.plusone_size_standard
      %option{:value => 'tall', :selected => Option.plusone_size == 'tall'}= t.plusone_size_tall
  .field
    %label{:for => 'plusone_counter'}= t.plusone_counter
    %br
    %input{:type => 'radio', :id => 'plusone_counter_true', :name => 'plusone_counter', :value => 'true', :checked => Option.plusone_counter == 'true' || Option.plusone_counter.blank? }
    %label{:for => 'plusone_counter_true'}= t.plusone_counter_true
    %input{:type => 'radio', :id => 'plusone_counter_false', :name => 'plusone_counter', :value => 'false', :checked => Option.plusone_counter == 'false'}
    %label{:for => 'plusone_counter_false'}= t.plusone_counter_false
  .field
    %label{:for => 'plusone_lang'}= t.plusone_lang
