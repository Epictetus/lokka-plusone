      %option{:value => 'iw', :selected => Option.plusone_lang == 'iw'}= t.plusone_lang_iw
      %option{:value => 'hi', :selected => Option.plusone_lang == 'hi'}= t.plusone_lang_hi
      %option{:value => 'hu', :selected => Option.plusone_lang == 'hu'}= t.plusone_lang_hu
      %option{:value => 'id', :selected => Option.plusone_lang == 'id'}= t.plusone_lang_id
