      %option{:value => 'hr', :selected => Option.plusone_lang == 'hr'}= t.plusone_lang_hr
      %option{:value => 'cs', :selected => Option.plusone_lang == 'cs'}= t.plusone_lang_cs
      %option{:value => 'da', :selected => Option.plusone_lang == 'da'}= t.plusone_lang_da
      %option{:value => 'nl', :selected => Option.plusone_lang == 'nl'}= t.plusone_lang_nl
      %option{:value => 'en-GB', :selected => Option.plusone_lang == 'en-GB'}= t.plusone_lang_enGB
      %option{:value => 'en-US', :selected => Option.plusone_lang == 'en-US' || Option.plusone_lang.blank? }= t.plusone_lang_enUS
      %option{:value => 'et', :selected => Option.plusone_lang == 'et'}= t.plusone_lang_et
      %option{:value => 'fil', :selected => Option.plusone_lang == 'fil'}= t.plusone_lang_fil
